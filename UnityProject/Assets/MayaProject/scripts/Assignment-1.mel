selectMode -component ;
select -r CircleWindow.e[5] CircleWindow.e[7] CircleWindow.e[12] CircleWindow.e[15:16] CircleWindow.e[18] CircleWindow.e[22] CircleWindow.e[25] CircleWindow.e[43] CircleWindow.e[45] CircleWindow.e[50] CircleWindow.e[53:54] CircleWindow.e[56] CircleWindow.e[60] CircleWindow.e[63] CircleWindow.e[79] CircleWindow.e[81] CircleWindow.e[86] CircleWindow.e[89:90] CircleWindow.e[92] CircleWindow.e[96] CircleWindow.e[99] ;
